{
  "variables": {
    "PACKER_OS_FLAVOUR": "ubuntu",
    "PACKER_BOX_NAME": "CentOS-7.0-1406-x86_64-Everything",
    "AWS_ACCESS_KEY_ID": "{{env `AWS_ACCESS_KEY_ID`}}",
    "AWS_SECRET_ACCESS_KEY": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "PACKER_ATLAS_TOKEN": "{{env `PACKER_ATLAS_TOKEN`}}",
    "PACKER_ATLAS_VERSION": ""
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "virtualbox_version_file": ".vbox_version",

      "guest_os_type": "RedHat_64",

      "headless": false,
      "http_directory": "http",

      "iso_checksum": "745a0a4a02147d8371b87dd09d402c7dc5fddc609caa7af44bc7b004de78c58a",
      "iso_checksum_type": "sha256",
      "iso_url": "http://puppet.hannan.lan/repos/centos/7.0.1406/isos/x86_64/{{ user `PACKER_BOX_NAME` }}.iso",

      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",

      "vm_name": "{{ user `PACKER_BOX_NAME` }}",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "1024"],
        ["modifyvm", "{{.Name}}", "--cpus", "2"]
      ],
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",

      "boot_wait": "10s",
      "boot_command": [
        "<tab>",
        "text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{ user `PACKER_BOX_NAME` }}/ks.cfg",
        "<enter><wait>"
      ],
      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant' | sudo -S sh '/tmp/shutdown.sh'"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "./provision.sh"
      ],
      "override": {
        "virtualbox-iso": {
          "execute_command": "echo 'vagrant' | sudo -S sh '{{.Path}}'"
        }
      }
    },
    {
      "type": "salt-masterless",
      "local_state_tree": "/Users/kevin/projects/virtual/srv/salt",
      "minion_config": "/Users/kevin/projects/virtual/etc/salt/minion"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": "9",
      "keep_input_artifact": true,
      "output": "../builds/{{.Provider}}/{{ user `PACKER_BOX_NAME` }}_{{.Provider}}.box"
    }
  ]
}
