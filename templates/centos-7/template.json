{
  "variables": {
    "PACKER_OS_FLAVOUR": "CentOS",
    "PACKER_BOX_NAME": "CentOS-7-x86_64-Minimal-1503-01",
    "AWS_ACCESS_KEY_ID": "{{env `AWS_ACCESS_KEY_ID`}}",
    "AWS_SECRET_ACCESS_KEY": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "PACKER_ATLAS_TOKEN": "{{env `PACKER_ATLAS_TOKEN`}}",
    "PACKER_ATLAS_VERSION": "",
    "PACKER_INSTALL_MEDIA": "CentOS-7-x86_64-Minimal-1503-01.iso",

    "compression_level": "1",
    "cpus": "2",
    "disk_size": "40000",
    "headless": "false",
    "memory": "1024",
    "keep_input_artifact": "true",

    "mirror": "http://mirrors.kernel.org/centos"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "format": "ova",
      "guest_os_type": "RedHat_64",

      "iso_checksum_type": "sha256",
      "iso_checksum": "7cf1ac8da13f54d6be41e3ccf228dc5bb35792f515642755ff4780d5714d4278",
      "iso_urls": [
        "/Volumes/mirror/centos/7.1.1503/isos/x86_64/{{ user `PACKER_INSTALL_MEDIA` }}",
        "/Volumes/mirror/centos/7.1.1503/isos/x86_64/CentOS-7-x86_64-Minimal-1503-01.iso",
        "http://centos.mirror.hannan.lan/7/isos/x86_64/{{ user `PACKER_BOX_NAME` }}.iso"
      ],

      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",

      "vm_name": "{{ user `PACKER_BOX_NAME` }}",

      "disk_size": "{{user `disk_size`}}",

      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
        ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"],
        ["modifyvm", "{{.Name}}", "--vram", "16"],
        ["modifyvm", "{{.Name}}", "--nic1", "nat"]
      ],

      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_additions_mode": "attach",

      "virtualbox_version_file": ".vbox_version",

      "http_directory": "http",
      "boot_wait": "10s",
      "boot_command": [
        "<tab>",
        "text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{ user `PACKER_BOX_NAME` }}/ks.cfg",
        "<enter><wait>"
      ],
      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant' | sudo -S sh '/tmp/shutdown.sh'",

      "output_directory": "/Volumes/Projects/vm-builds/{{ user `PACKER_BOX_NAME` }}/"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/vagrant.sh",
        "scripts/repo.sh",
        "scripts/provision.sh",
        "scripts/locale.sh",
        "scripts/cleanup.sh"
      ],
      "override": {
        "virtualbox-iso": {
          "execute_command": "echo 'vagrant' | sudo -S sh '{{.Path}}'"
        }
      }
    },
    {
      "type": "salt-masterless",
      "local_state_tree": "/Volumes/Projects/provisioning/srv/salt",
      "local_pillar_roots": "/Volumes/Projects/provisioning/srv/pillar",
      "minion_config": "/Volumes/Projects/provisioning/etc/salt/minion"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": "{{ user `compression_level` }}",
      "keep_input_artifact": true,
      "output": "/Volumes/VM Archive/builds/{{.Provider}}/{{ user `PACKER_BOX_NAME` }}_{{.Provider}}.box"
    }
  ]
}