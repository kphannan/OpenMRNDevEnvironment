{
  "variables": {
    "PACKER_OS_FLAVOUR": "CentOS",
    "OS_VERSION_MAJOR": "6",
    "OS_VERSION_MINOR": "6",
    "OS_ARCH": "x86_64",

    "PACKER_BOX_NAME": "CentOS-6.6-x86_64-minimal",

    "INSTALL_MEDIA": "DVD1",
    "PACKER_INSTALL_MEDIA": "CentOS-6.6-x86_64-minimal",
    "PACKER_INSTALL_MEDIA_CHECKSUM": "5458f357e8a55e3a866dd856896c7e0ac88e7f9220a3dd74c58a3b0acede8e4d",
    "PACKER_INSTALL_MEDIA_CHECKSUM_TYPE": "sha256",

    "AWS_ACCESS_KEY_ID": "{{env `AWS_ACCESS_KEY_ID`}}",
    "AWS_SECRET_ACCESS_KEY": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "PACKER_ATLAS_TOKEN": "{{env `PACKER_ATLAS_TOKEN`}}",
    "PACKER_ATLAS_VERSION": "",

    "SALT_ROOT":   "../../../../..",
    "OUTPUT_BASE": "../../../../..",

    "compression_level": "1",
    "cpus": "1",
    "disk_size": "90000",
    "headless": "false",
    "memory": "1024",
    "keep_input_artifact": "true",
    "mirror": "http://mirrors.kernel.org/centos",

    "ssh_name": "vagrant",
    "ssh_pass": "vagrant"

  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "format": "ova",
      "guest_os_type": "RedHat_64",

      "iso_checksum_type": "{{ user `PACKER_INSTALL_MEDIA_CHECKSUM_TYPE` }}",
      "iso_checksum": "{{ user `PACKER_INSTALL_MEDIA_CHECKSUM` }}",
      "iso_urls": [
        "/Volumes/mirror/centos/{{ user `OS_VERSION_MAJOR` }}.{{ user `OS_VERSION_MINOR` }}/isos/{{ user `OS_ARCH` }}/{{ user `PACKER_INSTALL_MEDIA` }}.iso",
        "file:///c:/mirror/centos/{{ user `OS_VERSION_MAJOR` }}.{{ user `OS_VERSION_MINOR` }}/isos/{{ user `OS_ARCH` }}/{{ user `PACKER_INSTALL_MEDIA` }}.iso",
        "http://mirror.cc.columbia.edu/pub/linux/centos/{{ user `OS_VERSION_MAJOR` }}/isos/{{ user `OS_ARCH` }}/{{ user `PACKER_INSTALL_MEDIA` }}.iso"
      ],

      "communicator" : "ssh",
      "ssh_pty" : "true",
      "ssh_username": "{{ user `ssh_name` }}",
      "ssh_password": "{{ user `ssh_pass` }}",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",

      "vm_name": "{{ user `PACKER_BOX_NAME` }}",

      "disk_size": "{{user `disk_size`}}",
      "hard_drive_interface": "sata",

      "headless": "false",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
        ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"],
        ["modifyvm", "{{.Name}}", "--vram", "16"],
        ["modifyvm", "{{.Name}}", "--nic1", "nat"]
      ],

      "guest_additions_mode": "upload",
      "guest_additions_path": "/home/vagrant/VBoxGuestAdditions_{{.Version}}.iso",

      "virtualbox_version_file": ".vbox_version",

      "http_directory": "http",
      "boot_wait": "5s",
      "boot_command": [
        "<esc>",
        "<wait>",
        "linux ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{ user `PACKER_BOX_NAME` }}/ks.cfg",
        "<enter><wait>"
      ],
      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo {{ user `ssh_name` }} | sudo -S sh '/tmp/shutdown.sh'",

      "output_directory": "{{ user `OUTPUT_BASE` }}/vm-builds/{{ user `PACKER_BOX_NAME` }}/"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/vagrant.sh",
        "scripts/repo.sh",
        "scripts/provision.sh",
        "scripts/locale.sh",
        "scripts/cleanup.sh"
      ]
    },
    {
      "type": "salt-masterless",
      "local_state_tree": "{{ user `SALT_ROOT` }}/provisioning/salt/srv/salt",
      "local_pillar_roots": "{{ user `SALT_ROOT` }}/provisioning/salt/srv/pillar",
      "minion_config": "{{ user `SALT_ROOT` }}/provisioning/salt/etc/salt/minion"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": true,
      "output": "{{ user `OUTPUT_BASE` }}/VMArchive/builds/{{.Provider}}/{{ user `PACKER_BOX_NAME` }}_{{.Provider}}.box"
    }
  ]
}
